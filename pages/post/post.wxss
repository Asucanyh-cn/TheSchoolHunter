page{
  width: 650rpx;
  margin: 0 auto;
}
.mplace,.mdate{
  margin: 10rpx;
}
.post-title{  
  font-weight: bolder;
  font-size: large;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
}
text{
  font-weight:lighter;
  border-radius: 10rpx ;
  padding: 10rpx;
  background: #ffff;
}
.points{
  text-align: center;
}
.pi{
  /* border: 1rpx solid; */
  border-left: 1rpx solid;
  width: 650rpx;
  margin: 0 auto;

  border-radius: 10rpx ;
  padding: 10rpx;
  background: #ffff;
}
.mTitle-i{
  height: 100rpx;
}
.mContent-i{
  height: 350rpx;
  /* height: 250rpx; */
}
/* 时间地点盒子*/
.date-place-box{
  display: flex;
  
  justify-content: space-evenly;
}
/*主容器*/
.stepper {
  /* border: 1rpx solid; */
  display: flex;
  justify-content: center;
}
/*加号和减号*/
.stepper text{
  /* border: solid 1rpx; */
  width: 19px;
  line-height: 26px;
  text-align: center;
}
/*数值*/
.stepper input {
  background: #fff;
  width: 40px;
  height: 35px;
  /* margin: 0 auto; */
  text-align: center;
  font-size: 12px;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}
/*普通样式*/
.stepper .normal {
  color:black;
}
/*禁用样式*/
.stepper .disable {
  color: #ccc;
}
/* 上传图片 */
.postPic{
  border-radius: 10rpx ;
  padding: 10rpx;
  background: #ffff;
  box-shadow: #7a7a7a 1rpx 1rpx 3rpx;

  text-align: center;
  margin: 0 auto;
  width: 250rpx;
  padding: 10rpx 20rpx;
  box-shadow: 1rpx 1rpx 6rpx #ddd;
}
.button-box{
  margin-top: 50rpx;
  display: flex;
  /* border: solid 1rpx; */
}
#type1{  
  background: skyblue;
  color: #fff;
}
